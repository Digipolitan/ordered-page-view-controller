workspace 'OrderedPageViewController.xcworkspace'

## Frameworks targets
abstract_target 'Frameworks' do
	use_frameworks!
	target 'OrderedPageViewController-iOS' do
		platform :ios, '8.0'
	end

	target 'OrderedPageViewController-tvOS' do
		platform :tvos, '9.0'
	end
end

## Tests targets
abstract_target 'Tests' do
	use_frameworks!
	target 'OrderedPageViewControllerTests-iOS' do
		platform :ios, '8.0'
	end

	target 'OrderedPageViewControllerTests-tvOS' do
		platform :tvos, '9.0'
	end
end

## Samples targets
abstract_target 'Samples' do
	use_frameworks!
	target 'OrderedPageViewControllerSample-iOS' do
		project 'Samples/OrderedPageViewControllerSample-iOS/OrderedPageViewControllerSample-iOS'
		platform :ios, '8.0'
	end

	target 'OrderedPageViewControllerSample-tvOS' do
		project 'Samples/OrderedPageViewControllerSample-tvOS/OrderedPageViewControllerSample-tvOS'
		platform :tvos, '9.0'
	end
end
